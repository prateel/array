#include <stdio.h>

int main()
{
    int a[5],b[5],i,c[5];
    printf("enter the first ray element:");
    for(i=0;i<5;i++)
        scanf("%d",&a[i]);
    
    printf("\nenter the second ray elememt:");
    for(i=0;i<5;i++)
        scanf("%d",&b[i]);
    
    for(i=0;i<5;i++){
        c[i]=a[i]+b[i];
        printf("\nsum of array element at index %d is : %d",i,c[i]);
    }
  
return 0;
}
