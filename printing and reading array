// reading data and printing the array
#include <stdio.h>

int main()
{
    int a[5],i;
    printf("enter the elements of array:");
     
for(i=0;i<5;i++){
    scanf("%d",&a[i]);
}
for(i=0;i<5;i++){
    printf("array element at index %d is: %d",i,a[i]);
}
    return 0;
}

//reversing the array
#include <stdio.h>

int main()
{
    int a[5],i;
    printf("enter the elements of array");
     
for(i=0;i<5;i++){
    scanf("%d",&a[i]);
}
for(i=4;i>0;i--){
    printf("%d",a[i]);
}
    return 0;
}
